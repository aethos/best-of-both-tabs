{
	"manifest_version": 2,
	"name": "Best of Both Tabs",
	"version": "0.1",
	"options_ui": {
		"page": "options.html"
	},
	"background": { "scripts": ["init.js", "background-main.js"] },
	"browser_action": {
		"default_icon": "icon128.png"
	},
	"icons": { 
		"16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
     },
	"content_scripts": [
		{
			"matches": ["https://*/*", "http://*/*"],
			"js": ["third_party/jquery-3.2.1.js", "third_party/jquery-ui.min.js", "page-listener.js"],
			"css": ["third_party/jquery-ui.min.css"]
		}
	],
	"web_accessible_resources": [
		"third_party/images*.png"
	],
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>",
		"tabs",
		"storage"
	]
}
