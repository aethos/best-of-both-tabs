{
	"manifest_version": 2,
	"name": "Best of Both Tabs",
	"version": "0.1",
	"options_page": "options.html",
	"background": { "scripts": ["constants.js", "init.js", "actions.js"] },
	"browser_action": {
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*/*"],
			"js": ["page-listener.js"]
		}
	],
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>",
		"tabs"
	]
}