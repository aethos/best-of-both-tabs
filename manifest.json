{
	"manifest_version": 2,
	"name": "Best of Both Tabs",
	"version": "0.1",
	"options_page": "options.html",
	"background": { "scripts": ["constants.js", "init.js", "background-main.js"] },
	"browser_action": {
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*/*"],
			"js": ["third_party/jquery-3.2.1.js", "third_party/jquery-ui.min.js", "page-listener.js"],
			"css": ["third_party/jquery-ui.min.css"]
		}
	],
	"web_accessible_resources": [
		"third_party/images*.png"
	],
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>",
		"tabs"
	]
}
